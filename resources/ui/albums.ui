<?xml version='1.0' encoding='UTF-8'?>
<interface>
  <requires lib="gtk" version="4.6" />
  <requires lib="libadwaita" version="1.1" />
  <object class="GtkBox" id="root">
    <property name="orientation">vertical</property>
    <property name="hexpand">true</property>
    <child>
      <object class="GtkActionBar">
        <child>
          <object class="GtkLabel">
            <property name="label">Sort</property>
          </object>
        </child>
        <child>
          <object class="GtkDropDown">
            <property name="model">
              <object class="GtkStringList">
                <items>
                  <item translatable="yes">randomly</item>
                  <item translatable="yes">by genre</item>
                  <item translatable="yes">by most recently added</item>
                  <item translatable="yes">by most played</item>
                  <item translatable="yes">by most recently played</item>
                  <item translatable="yes">alphabetically</item>
                  <item translatable="yes">by starred only</item>
                  <item translatable="yes">by year</item>
                </items>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkScrolledWindow"></object>
    </child>
  </object>
</interface>
