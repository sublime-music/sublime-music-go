<?xml version='1.0' encoding='UTF-8'?>
<interface>
  <requires lib="gtk" version="4.6" />
  <requires lib="libadwaita" version="1.1" />
  <object class="AdwLeaflet" id="root">
    <child>
      <object class="GtkBox" id="leftbox">
        <property name="orientation">vertical</property>
        <property name="width-request">300</property>
        <child>
          <object class="GtkActionBar">
            <child>
              <object class="GtkButton">
                <property name="icon-name">plus-symbolic</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton">
                <property name="icon-name">refresh-symbolic</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkListBox">
            <property name="vexpand">true</property>
            <child type="placeholder">
              <object class="AdwStatusPage">
                <property name="icon-name">playlist-symbolic</property>
                <property name="title">No Playlists</property>
                <property name="description">There were no playlists on the server</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwFlap">
        <property name="orientation">vertical</property>
        <property name="modal">false</property>
        <property name="locked">true</property>
        <property name="swipe-to-open">false</property>
        <property name="swipe-to-close">false</property>
        <binding name="reveal-flap">
          <lookup name="hscrollbar-policy">playlist-details-scroll-window</lookup>
        </binding>
        <property name="flap">
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <child>
              <object class="GtkImage">
                <property name="icon-name">playlist-symbolic</property>
                <property name="height-request">70</property>
                <property name="width-request">70</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">PLAYLIST</property>
                    <property name="halign">start</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="playlist-name-small">
                    <property name="label">Playlist Name</property>
                    <property name="name">playlist-name-small</property>
                    <property name="halign">start</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
        <property name="content">
          <object class="GtkScrolledWindow" id="playlist-details-scroll-window">
            <property name="hexpand">true</property>
            <property name="hscrollbar-policy">GTK_POLICY_NEVER</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <child>
                      <object class="GtkImage">
                        <property name="icon-name">playlist-symbolic</property>
                        <property name="height-request">200</property>
                        <property name="width-request">200</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">PLAYLIST</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="playlist-name">
                            <property name="label">Playlist Name</property>
                            <property name="name">playlist-name</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="playlist-comment">
                            <property name="label">Playlist Comment</property>
                            <property name="name">playlist-comment</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="playlist-stats">
                            <property name="label">Playlist Stats</property>
                            <property name="name">playlist-stats</property>
                            <property name="halign">start</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Shit here</property>
                    <property name="height-request">1000</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
          <!-- <object class="AdwStatusPage"> -->
          <!--   <property name="hexpand">true</property> -->
          <!--   <property name="icon-name">playlist-symbolic</property> -->
          <!--   <property name="title">No Playlist Selected</property> -->
          <!--   <property name="description">Select a playlist on the left</property> -->
          <!-- </object> -->
        </property>
      </object>
    </child>
  </object>
</interface>
